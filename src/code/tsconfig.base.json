{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2017",
    "module": "es2020",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "strictBindCallApply": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    // "useUnknownInCatchVariables": true,
    "strictFunctionTypes": true,
    "noFallthroughCasesInSwitch": false, // rely on linter for this
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": false,
    // "allowSyntheticDefaultImports": true, // used for RollBar
    "baseUrl": ".",
    "sourceMap": true,
    // "declaration": false,
    // "declarationMap": false,
    "moduleResolution": "node",
    // "emitDecoratorMetadata": true,
    // "experimentalDecorators": true,
    "composite": true,
    "typeRoots": [
      "node_modules/@types",
      "node_definitions/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "rootDir": ".",
    "paths": {
      "res-internal-api": ["src/res/internal-api"],
      "sys-internal-api": ["src/sys/internal-api"],
      "adi-internal-api": ["src/adi/internal-api"],
      "core-internal-api": ["src/core/internal-api"],
      // make sure we do not import the CommonJS decimal.js-light
      "decimal.js-light": ["node_modules/decimal.js-light/decimal.mjs"]
    }
    // "traceResolution": true, // can use this to debug paths below
  }
}
